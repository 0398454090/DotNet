@model BookLibrary.Models.Page

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <nav class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">
            <i class="anticon anticon-home"></i> Trang chủ
        </a>
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index">Danh sách trang</a>
        <span class="breadcrumb-item active">Page: @Model.PageName</span>
    </nav>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <!-- Thông tin avatar và tiêu đề -->
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px;">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" class="img-fluid">
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.PageName</h4>
                <p class="text-muted m-b-0">ID: #@Model.PageId</p>
            </div>
        </div>

        <!-- Nút chỉnh sửa -->
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.PageId">Chỉnh sửa</a>
        </div>
    </div>

    <!-- Tabs điều hướng -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Tổng quan</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-images">Hình ảnh</a>
        </li>
    </ul>
</div>

<div class="container-fluid">
    <div class="tab-content m-t-15">
        <!-- Tab Tổng quan -->
        <div class="tab-pane fade show active" id="product-overview">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">THÔNG TIN PAGE: @Model.PageName</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Page Name:</td>
                                    <td class="text-dark font-weight-semibold">@Model.PageName</td>
                                </tr>
                                <tr>
                                    <td>Alias:</td>
                                    <td>@Model.Alias</td>
                                </tr>
                                <tr>
                                    <td>Trạng thái:</td>
                                    <td>
                                        @Model.Published
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Thông tin mô tả -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">THÔNG TIN MÔ TẢ</h4>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Contents)
                </div>
            </div>
        </div>

        <!-- Tab Hình ảnh -->
        <div class="tab-pane fade" id="product-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="~/assets/images/pages/@Model.Thumb" alt="@Model.Title">
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
