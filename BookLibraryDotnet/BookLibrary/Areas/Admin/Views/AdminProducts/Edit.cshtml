@model BookLibrary.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt">Edit Product</h2>

<div class="chin mt-4">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="ProductId" />

        <!-- Các trường thông tin sản phẩm -->
        <div class="row mb-3">
            <label asp-for="ProductName" class="col-sm-2 col-form-label">Tên sản phẩm</label>
            <div class="col-sm-10">
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="CatId" class="col-sm-2 col-form-label">Thể loại</label>
            <div class="col-sm-10">
                <select asp-for="CatId" class="form-control" asp-items="ViewBag.DanhMuc">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CatId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Price" class="col-sm-2 col-form-label">Giá bán</label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Thumb" class="col-sm-2 col-form-label">Tải ảnh</label>
            <div class="col-sm-10">
                <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                <span asp-validation-for="Thumb" class="text-danger"></span>
                <label for="ThumbText" class="mt-3">Hoặc nhập URL ảnh</label>
                <input asp-for="Thumb" class="form-control" id="ThumbText" />
                <span asp-validation-for="Thumb" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Video" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="DateCreated" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DateCreated" class="form-control" type="datetime-local" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="DateModified" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DateModified" class="form-control" type="datetime-local" />
                <span asp-validation-for="DateModified" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="AuthorName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="AuthorBio" class="col-sm-2 col-form-label">Thông tin tác giả</label>
            <div class="col-sm-10">
                <textarea asp-for="AuthorBio" class="form-control" rows="5"></textarea>
                <span asp-validation-for="AuthorBio" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input asp-for="BestSellers" class="form-check-input" />
                    <label class="form-check-label" for="BestSellers">@Html.DisplayNameFor(model => model.BestSellers)</label>
                </div>
                <div class="form-check">
                    <input asp-for="HomeFlag" class="form-check-input" />
                    <label class="form-check-label" for="HomeFlag">@Html.DisplayNameFor(model => model.HomeFlag)</label>
                </div>
                <div class="form-check">
                    <input asp-for="Active" class="form-check-input" />
                    <label class="form-check-label" for="Active">@Html.DisplayNameFor(model => model.Active)</label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Tags" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Ttile" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Ttile" class="form-control" />
                <span asp-validation-for="Ttile" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Alias" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="MetaDesc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MetaDesc" class="form-control" />
                <span asp-validation-for="MetaDesc" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="MetaKey" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MetaKey" class="form-control" />
                <span asp-validation-for="MetaKey" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="UnitslnStock" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UnitslnStock" class="form-control" />
                <span asp-validation-for="UnitslnStock" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-12 text-start">
                <a asp-action="Index" class="btn btn-secondary d-inline-block">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary d-inline-block" />
            </div>
        </div>
    </form>
</div>
