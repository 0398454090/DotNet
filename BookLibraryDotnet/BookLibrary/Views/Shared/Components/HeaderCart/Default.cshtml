@model List<BookLibrary.ModelViews.CartItem>
@if(Model!=null && Model.Count() > 0)
{

    <div class="tg-minicartbody">
        @foreach (var item in Model)
        {
            string url = $"/{item.product.Alias}--{item.product.ProductId}.html";
            <div class="tg-minicarproduct">
                <figure>
                    <img src="@item.product.Thumb" alt="@item.product.ProductName" style="width: 60px; height: 60px; object-fit:contain;">

                </figure>
                <div class="tg-minicarproductdata">
                    <h5><a href="@url">@item.product.ProductName</a></h5>
                    <h6><a href="@url">@item.amount x @item.product.Price.Value.ToString("#,##0") VNĐ</a></h6>
                </div>
            </div>
        }


        <div class="tg-minicartfoot">
            <a class="tg-btnemptycart" href="javascript:void(0);">
                <i class="fa fa-trash-o"></i>
                <span>Clear Your Cart</span>
            </a>
            <span class="tg-subtotal">Tổng tiền: <strong>@Model.Sum(x=>x.TotalMoney).ToString("#,##0") VNĐ</strong></span>
            <div class="tg-btns">
                <a class="tg-btn tg-active" asp-controller="cart.html" asp-action="Index">Giỏ hàng</a>

                <a class="tg-btn" href="checkout.html">Thanh toán</a>

            </div>
        </div>
    </div>
}
else
{
    <p>Giỏ hàng rỗng</p>
}
