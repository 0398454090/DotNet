@model BookLibrary.ModelViews.ChangePasswordViewModel

<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <!-- Hiển thị thông báo lỗi tổng quát -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Mật khẩu hiện tại -->
            <div class="single-input">
                <label for="currentPassword">Mật khẩu hiện tại</label>
                <input asp-for="PasswordNow" type="password" id="currentPassword" class="form-control">
                <span asp-validation-for="PasswordNow" class="text-danger"></span>
            </div>

            <!-- Mật khẩu mới -->
            <div class="single-input">
                <label for="newPassword">Mật khẩu mới</label>
                <input asp-for="Password" type="password" id="newPassword" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Nhập lại mật khẩu mới -->
            <div class="single-input">
                <label for="confirmPassword">Nhập lại mật khẩu mới</label>
                <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Nút Lưu thay đổi -->
            <div class="single-input">
                <button class="btn btn-custom-size" type="submit">
                    Lưu thay đổi
                </button>
            </div>
        </div>
    </form>
</div>
