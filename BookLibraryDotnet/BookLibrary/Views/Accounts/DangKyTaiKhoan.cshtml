@model BookLibrary.ModelViews.RegisterVM

@{
    ViewData["Title"] = "DangKyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" >
    <div class="col-md-5" style="box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); background-color: #fff; border-radius: 8px; padding: 40px; margin: 100px">
        <div class="card-body">
            <div class="text-center mb-4">
                <h3 class="font-weight-bold">Đăng ký</h3>
            </div>

            <form asp-action="DangKyTaiKhoan">
                <!-- Full Name -->
                <div class="form-group">
                    <label asp-for="FullName" class="text-secondary">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" autocapitalize="none" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Email" class="text-secondary">Địa chỉ Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ Email" autocapitalize="none" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <!-- Phone -->
                <div class="form-group">
                    <label asp-for="Phone" class="text-secondary">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label asp-for="Password" class="text-secondary">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="text-secondary">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Terms Agreement -->
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheckbox" required>
                    <label class="form-check-label" for="termsCheckbox">Tôi đồng ý với <a href="terms-of-service.html">Điều khoản dịch vụ</a> và <a href="privacy-policy.html">Chính sách quyền riêng tư</a></label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-block mt-3" style="margin-bottom: 10px; padding: 10px;">Tạo tài khoản</button>

                <div class="text-center mt-3">
                    <p class="mb-0">Đã có tài khoản? <a href="login.html">Đăng nhập ngay!</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
